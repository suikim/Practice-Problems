
<%- include ("partials/header") %>

<div class="container">

	<div class="container d-flex justify-content-center">
		<h1 class="py-3"> Add New Cafe </h>
		<form action="/allCafes" method="POST">
			<div class="form-group mt-3">
				<input type="text" class="form-control" name="cafeName" placeholder="Name">
			</div>
			<div class="form-group ">
				<input type="text" class="form-control" name="cafeImage" placeholder="Image URL">
			</div>
			<div class="form-group m-0">
				<button class="btn btn-primary btn-block"> Submit </button>
			</div>	
		</form>
		<a href="/allCafes" class="btn-sm text-decoration-none p-0">Go Back to Cafes</a>
	</div>

</div>


<%- include ("partials/footer") %>
